# ============================================================================
# KEYCLOAK - Autenticación y Autorización
# ============================================================================
KEYCLOAK_HOST=localhost
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8180/realms/datum-travels
KEYCLOAK_TOKEN_ISSUER=http://localhost:8180/realms/datum-travels

KEYCLOAK_ADMIN_URL=http://localhost:8180
KEYCLOAK_ADMIN_REALM=datum-travels
KEYCLOAK_ADMIN_AUTH_REALM=datum-travels
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_ADMIN_DEFAULT_ROLE=usuario

# ============================================================================
# API de Conversión de Monedas (exchangerate-api.com)
# ============================================================================
# Registrarse gratis en: https://www.exchangerate-api.com/
# Plan gratuito: 1,500 requests/mes (suficiente para ~50 gastos/día)
EXCHANGERATE_API_KEY=PEGA_TU_API_KEY_AQUI
EXCHANGERATE_API_URL=https://v6.exchangerate-api.com/v6

# ============================================================================
# SMTP - Configuración de Correo Electrónico
# ============================================================================
# Para Gmail: Generar App Password en https://myaccount.google.com/apppasswords
# Tutorial: https://support.google.com/accounts/answer/185833
# 
# Para Mailtrap (testing): https://mailtrap.io/inboxes (gratis para desarrollo)

SMTP_FROM=tu-email@gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=PEGA_TU_APP_PASSWORD_AQUI

# Mock Mode: true = no envía correos reales (recomendado para desarrollo)
MAILER_MOCK=true

# ============================================================================
# AZURE STORAGE - Para almacenar imágenes de comprobantes
# ============================================================================
# Obtener en Azure Portal → Storage Account → Access Keys
# Tutorial: https://learn.microsoft.com/en-us/azure/storage/common/storage-account-keys-manage
AZURE_STORAGE_ACCOUNT_NAME=storageocr2025
AZURE_STORAGE_ACCOUNT_KEY=PEGA_TU_AZURE_STORAGE_KEY_AQUI
AZURE_STORAGE_CONTAINER_NAME=ocr-files
